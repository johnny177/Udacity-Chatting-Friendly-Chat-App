<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorButtonNormal">@drawable/button_selector</item>
        <item name="colorButtonNormal">@drawable/button_selector</item>
        <item name="android:buttonStyle">@style/FriendlyButtonStyle</item>
    </style>

    <style name="FriendlyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTitle</item>

    </style>

    <!--Login them for the firebase sign in UI-->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="title">Duchess Chat</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">#C5C5C5</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="icon">@drawable/ic_logo</item>

    </style>
</resources>